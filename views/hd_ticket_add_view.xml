<?xml version="1.0"?>
<odoo>
    <data>
        <record id="cloudalia_helpdesk_ticket_inherit_view_form" model="ir.ui.view">
            <field name="name">cloudalia_helpdesk.ticket.form.inherit</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sla_active']" position="after">
                    <field name="campo_orden_sat" context="{'default_name':id, 'default_lot_id':x_sn, 'default_partner_id':partner_id}"/>
                </xpath>
                <xpath expr="//field[@name='x_sn']" position="after">
                    <field name="serial_n" context="{'default_serial_n':x_sn}"/>
                </xpath>
                
            </field>
        </record>
    </data>
</odoo>