<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_mrp_repair_form_inherit" model="ir.ui.view">
            <field name="name">cloudalia_mrp.repair.form.inherit</field>
            <field name="model">mrp.repair</field>
            <field name="inherit_id" ref="mrp_repair.view_repair_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_send_mail']" position="after">
                    <button name="action_etiqueta_impr" string="Imprimir etiqueta" type="object"/>
                </xpath>
            </field>
        </record>

        <record id="report_etiqueta_sat_1" model="ir.actions.act_window">
            <field name="name">Imprimir Etiqueta SAT</field>            <!-- name of action -->
            <field name="res_model">mrp.repair</field>            <!-- this action will be mapped to model specified -->
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>            <!-- these are type of view our module will show for our daily transaction mode  -->
            <field name="context">{}</field>
            <field name="help">Create new daily transaction.</field>            <!-- help text for our model -->
        </record>

        <menuitem action="report_etiqueta_sat_1" />

    </data>
</odoo>